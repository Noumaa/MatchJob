{% extends 'base.html.twig' %}

{% block title %}Hello OffresController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }} :</h1>
</div>

<h1>Nom de l'emploi : {{uneOffre.label}}</h1>
<h5>Description de l'emploi : {{uneOffre.description}}</h5>
<h5>Salaire par heure : {{uneOffre.moneyPerHour}} €</h5>
<h5>Date de début : {{uneOffre.startAt|date('d-m-Y')}}</h5>
<h5>Date de fin : {{uneOffre.endAt|date('d-m-Y')}}</h5>
<h5>Durée de l'emploi : {{duration}}</h5>

{% endblock %}
