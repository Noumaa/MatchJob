								<div class="col-sm-9">
									<p class="text-muted mb-0">{{business.siret}}</p>
								</div>
							</div>
						</div>
					</div>

				</div>

				<div class="col-lg-12">
					<div class="row">
						{% for offer in offers %}
							<div class="col-md-4">
								<div class="card mb-4 mb-md-0">
									<div class="card-body">
										<div class="row">
											<div class="col-sm-9">
												<p class="text-muted mb-0">{{offer.label}}</p>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-9">
												<p class="text-muted mb-0">Salaire de l'heure : {{offer.moneyPerHour}} €/h</p>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-9">
												<p class="text-muted mb-0">{{ offer.description|length > 100 ? offer.description|slice(0, 100) ~ '...' : offer.description  }}</p>
